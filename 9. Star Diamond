void nStarDiamond(int p) {
    for(int i = 0 ; i<p;i++){
        for(int j = 0;j<p-i-1;j++){
            cout<<" ";
        }
        for(int j= 0;j<(2*i)+1;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i = p-1 ; i>=0;i--){
         for(int j = 0;j<p-i-1;j++){
            cout<<" ";
        }
        for(int j= 0;j<(2*i)+1;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}
